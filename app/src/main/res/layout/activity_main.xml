<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lille1.bermont.gestionparclille.MainActivity">

    <Spinner
        android:id="@+id/type_probleme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="353dp" />

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="255dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="16dp">

        <TextView
            android:id="@+id/titre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bienvenue dans l'application de gestion du parc vert Lille 1" />

        <TextView
            android:id="@+id/probleme_reference_titre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Les derniers problèmes reportés :" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Probleme 1" />
    </LinearLayout>

    <TextView
        android:id="@+id/probleme_ajouter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ajouter un problème"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="311dp" />

</android.support.constraint.ConstraintLayout>
